<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.ac.kaist.orz">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".OrzMainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".LoginActivity">

        </activity>
        <activity android:name=".RegisterAccountActivity"
                  android:label="@string/label_register_account" />
        <activity android:name=".AssignmentDetailsActivity" />
        <activity android:name=".RegisterAssignmentActivity" />
        <activity android:name=".ScheduleDetailsActivity" />
        <activity android:name=".RegisterScheduleActivity" />
        <activity android:name=".AccountSettingsActivity" />
        <activity android:name=".MyCoursesActivity"
                  android:label="@string/label_my_courses"
                  android:parentActivityName=".OrzMainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".OrzMainActivity" />

            <!--
            이 부분이 어플 처음 실행 시 나타나는 화면임. 아래 intent-filter 부분을 원하는 곳으로 옮기면 됨.
            -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>



        </activity>
        <activity android:name=".OpenCoursesActivity"
                  android:label="@string/label_open_courses"
                  android:parentActivityName=".MyCoursesActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MyCoursesActivity" />
        </activity>
        <activity android:name=".NotificationSettingsActivity"></activity>
    </application>

</manifest>