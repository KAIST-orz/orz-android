<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/myCourseName"
        android:layout_width="370dp"
        android:layout_height="19dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="CourseName"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/myCourseLecturer"
        android:layout_width="269dp"
        android:layout_height="46dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="CourseLecturer"
        app:layout_constraintStart_toEndOf="@+id/myCourseID"
        app:layout_constraintTop_toBottomOf="@+id/myCourseName" />

    <TextView
        android:id="@+id/myCourseID"
        android:layout_width="91dp"
        android:layout_height="47dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="CourseID"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myCourseName" />

    <Button
        android:id="@+id/AddDelete_button"
        android:layout_width="45dp"
        android:layout_height="44dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="?attr/colorBackgroundFloating"
        android:text="+/-"
        app:layout_constraintBottom_toBottomOf="@+id/myCourseLecturer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/myCourseName"
        app:layout_constraintVertical_bias="1.0" />
</android.support.constraint.ConstraintLayout>